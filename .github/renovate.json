{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "helpers:pinGitHubActionDigests"],
	"labels": ["Meta: Dependencies"],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": "!/^0/",
				"automerge": true
			}
		],
        "lockFileMaintenance": {
            "enabled": true,
            "automerge": true
        }
	}
}
